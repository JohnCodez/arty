
<h1>Create and Account</h1>

<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name%>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.submit %>
<%end%>

<% if flash[:user_errors] %>
    <% flash[:user_errors].each do |error| %>
        <p style="color:red;"> <%= error %></p>
    <% end %>
<% end %>